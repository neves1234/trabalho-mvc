<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de produtos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="css/geral.css">
</head>
<body>

    <%- include('./layouts/default/header') %>

    <div class="container">
        <div>
            <div>
                <div class="row row-cols-md-1 g-4 mt-1">

                    <% produtos.forEach(produto => { %> 

                      <div class="container mt-4">
                        <div class="row bg-white rounded-3">
                          <img src="/uploads/<%- produto.imagem %>" class="img-fluid p-0" id="image" style="max-width: 100%;border-radius: 0.5rem 0 0 0.5rem ;">
                          <div class="col-md-8">
                            <div class="card-body mt-4" style="border: none; margin-left: 2rem;">
                              <h4 class="card-title fw-bold mb-3"><%- produto.nome %></h4>
                              <h5 class="mb-3">R$<%- produto.valor %></h5>
                              <p class="card-text">Descrição: <%- produto.descricao %></p>
                              <p>Quantidade em estoque: <%- produto.estoque %></p>
                              <p>Categoria: <%- produto.categoria %></p>
                            </div>
                            <a href="/cadastroProduto/delete/<%= produto.idProduto %>" class="btn btn-danger">
                              <i class="bi-trash"></i>
                            </a>
                          </div>
                        </div>
                      </div>

                    <% }); %>

                  </div>
            </div>
        </div>
    </div>
</body>
</html>